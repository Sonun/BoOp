<UserControl x:Class="BoOp.UI.WPF.Views.RemoveBookView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BoOp.UI.WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" 
             xmlns:viewmodels="clr-namespace:BoOp.UI.WPF.ViewModels" 
            d:DataContext="{d:DesignInstance Type=viewmodels:RemoveBookViewModel}">
    <Grid Background="{StaticResource DropShadow}">
        <StackPanel Margin="10">
            <Label Margin="10" Content="Buch Löschen" HorizontalAlignment="Center"/>
            <Label Margin="10" Content="Bitte scanne den Barcode:" HorizontalAlignment="Center"/>
            <TextBox Margin="10" Text="{Binding Barcode}"/>
            <Button Margin="10" Content="BUCH LÖSCHEN" Command="{Binding SaveCommand}"/>
            <Button Margin="10" Content="abbrechen" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
