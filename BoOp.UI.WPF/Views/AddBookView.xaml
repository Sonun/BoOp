<UserControl x:Class="BoOp.UI.WPF.Views.AddBookView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BoOp.UI.WPF.Views"
             mc:Ignorable="d"
             d:DesignHeight="1080" d:DesignWidth="1920"
             xmlns:viewmodels="clr-namespace:BoOp.UI.WPF.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:AddBookViewModel}">

    <Grid Background="{StaticResource Primary}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="8*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border Grid.Column="1" Grid.Row="1" CornerRadius="10" Background="{StaticResource Secondary}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="1.2*" />
                </Grid.RowDefinitions>
                <Label x:Name="TitelLabel" Style="{StaticResource LabelBookStyle}" FontSize="24" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Titel*" />
                <Label x:Name="AuthorLabel" Style="{StaticResource LabelBookStyle}" FontSize="24" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Author*" />
                <Label x:Name="VerlagLabel" Style="{StaticResource LabelBookStyle}" FontSize="24" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Verlag*" />
                <Label Style="{StaticResource LabelBookStyle}" FontSize="24" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Auflage:" />
                <Label Style="{StaticResource LabelBookStyle}" FontSize="24" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Genres:" />
                <Label x:Name="SchlagwoerterLabel" Style="{StaticResource LabelBookStyle}" FontSize="24" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Schlagwörter* (scannbar)" />
                <Label Style="{StaticResource LabelBookStyle}" FontSize="24" Grid.Row="6" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="ISBN:" />
                <Label Style="{StaticResource LabelBookStyle}" FontSize="24" Grid.Row="7" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Altersvorschlag:" />
                <Label Style="{StaticResource LabelBookStyle}" FontSize="24" Grid.Row="8" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Regal:" />
                <Label Style="{StaticResource LabelBookStyle}" FontSize="24" Grid.Row="9" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Exemplare:" />

                <TextBox x:Name="TitelTextbox" Grid.Row="0" Grid.Column="1" Width="450" FontSize="24" Style="{StaticResource AddBookTextBoxStyle}" Text="{Binding Titel}" HorizontalAlignment="Center" />
                <TextBox x:Name="AuthorTextbox" Grid.Row="1" Grid.Column="1" Width="450" FontSize="24" Style="{StaticResource AddBookTextBoxStyle}" Text="{Binding Author}" HorizontalAlignment="Center" />
                <TextBox x:Name="VerlagTextbox" Grid.Row="2" Grid.Column="1" Width="450" FontSize="24" Style="{StaticResource AddBookTextBoxStyle}" Text="{Binding Verlag}" HorizontalAlignment="Center" />
                <TextBox Grid.Row="3" Grid.Column="1" Width="450" FontSize="24" Style="{StaticResource AddBookTextBoxStyle}" Text="{Binding Auflage}" HorizontalAlignment="Center" />
                <TextBox Grid.Row="4" Grid.Column="1" Width="450" FontSize="24" Style="{StaticResource AddBookTextBoxStyle}" Text="{Binding Genres}" HorizontalAlignment="Center" />
                <TextBox x:Name="SchlagwoerterTextbox" Grid.Row="5" Grid.Column="1" Width="450" FontSize="24" Style="{StaticResource AddBookTextBoxStyle}" Text="{Binding Schlagwoerter}" HorizontalAlignment="Center" />
                <TextBox Grid.Row="6" Grid.Column="1" Width="450" FontSize="24" Style="{StaticResource AddBookTextBoxStyle}" Text="{Binding ISBN}" HorizontalAlignment="Center" />
                <TextBox Grid.Row="7" Grid.Column="1" Width="450" FontSize="24" Style="{StaticResource AddBookTextBoxStyle}" Text="{Binding Altersvorschlag}" HorizontalAlignment="Center" />
                <TextBox Grid.Row="8" Grid.Column="1" Width="450" FontSize="24" Style="{StaticResource AddBookTextBoxStyle}" Text="{Binding Regal}" HorizontalAlignment="Center" />
                <TextBox Grid.Row="9" Grid.Column="1" Width="450" FontSize="24" Style="{StaticResource AddBookTextBoxStyle}" Text="{Binding Exemplare}" HorizontalAlignment="Center" />
                <Button Grid.Row="10" Grid.Column="0" FontSize="24" HorizontalAlignment="Center" Style="{StaticResource RoundedButtonStyle}" Command="{Binding SearchInfosCommand}" Content="Suche Infos" />
                <StackPanel Grid.Row="10" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                    <CheckBox HorizontalAlignment="Center" FontSize="24" VerticalAlignment="Center" IsChecked="{Binding AddPrintList}" />
                    <Label Style="{StaticResource LabelBookStyle}" FontSize="22" Content="Exemplar Barcodes zur Druckliste hinzufügen" />
                </StackPanel>
                <Button Grid.Row="11" Grid.Column="0" FontSize="24" Style="{StaticResource RoundedButtonStyle}" Width="250" Command="{Binding CancelCommand}" Content="Abrechen" />
                <Button Grid.Row="11" Grid.Column="1" FontSize="24" Style="{StaticResource RoundedButtonStyle}" Width="250" Command="{Binding SaveCommand}" Content="Speichern" />
            </Grid>
        </Border>
    </Grid>
</UserControl>